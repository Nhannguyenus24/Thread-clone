<div class="relative flex py-4 px-6 border-b border-gray-800">
  <img class="mr-3 w-9 h-9 rounded-full" src="{{avatar}}" alt="icon" />
  <div class="flex flex-col flex-1">
    <div class="flex items-center mb-1">
      <div class="font-bold text-gray-300 text-base">{{username}}</div>
      <div class="ml-2 text-sm text-gray-500">{{time}}</div>
    </div>
    <p class="text-base text-gray-300">
      {{content}}
    </p>
  </div>
  <div class="self-center ml-auto w-2.5 h-2.5 rounded-full bg-blue-400"></div>
  <span
    class="absolute top-2 right-2 text-2xl text-gray-400 hover:text-red-500 transition-colors cursor-pointer">&times;</span>
</div>