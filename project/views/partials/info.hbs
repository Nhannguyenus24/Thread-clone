<div class="flex bg-transparent py-4 pl-6 gap-3 cursor-pointer text-[#F3F5F7] ">
      <img id="avatar" src="{{avatar}}" alt="Avatar" class="w-[36px] h-[36px] rounded-full"/>
      <div class="flex flex-col justify-center w-full border-b border-[#333333]">
        <div class="flex items-center h-[36px]">
          <div class="flex flex-col mr-auto">
            <span class="font-semibold">{{username}}</span>
            <span class="text-[#777777] font-normal">{{bio}}</span>
          </div>
          <button class="bg-transparent font-semibold text-[#F3F5F7] border border-[#333333] h-[36px] min-w-[104px] rounded-[0.75rem] mr-6">{{status}}</button>
        </div>
        <span class="py-3">{{followers}} người theo dõi</span>
      </div>
    </div>