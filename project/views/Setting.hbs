<div class="flex flex-col p-6 ">
  <div class="w-full flex mb-3">
    <a href="/setting/account" onclick="chooseMode(this)" class="block flex-1 border-b border-[#777777] text-center text-[#777777] leading-[3rem]">Tài khoản</a>
    <a href="/setting/help" onclick="chooseMode(this)" class="block flex-1 border-b border-[#777777] text-center text-[#777777] leading-[3rem]">Trợ giúp</a>
  </div>
  {{#if (eq currentPage 'account')}}
<div class="flex flex-col">
  <div class="mb-6 p-3 w-full">
    <label for="username" class="block mb-2">Tên tài khoản hiện tại</label>
    <div id="username-section" class="flex items-center space-x-4">
      <span id="username-value" class="mr-auto">{{username}}</span>
      <button onclick="editField('username')" class="text-blue-500 hover:text-blue-700">Chỉnh sửa</button>
    </div>
    <div id="username-edit" class="flex items-center space-x-4 hidden mt-2">
      <input type="text" id="username-input" name="username" value="{{username}}" class="bg-[#0a0a0a] text-[#f3f5f7] w-full px-4 py-2 border border-[#333333] rounded-lg focus:outline-none" />
      <button onclick="saveField('username')" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Lưu</button>
      <button onclick="cancelEdit('username')" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Hủy</button>
    </div>
  </div>

    <div class="mb-6 p-3 w-full">
    <label for="fullname" class="block mb-2">Tên người dùng hiện tại</label>
    <div id="fullname-section" class="flex items-center space-x-4">
      <span id="fullname-value" class="mr-auto">{{fullname}}</span>
      <button onclick="editField('fullname')" class="text-blue-500 hover:text-blue-700">Chỉnh sửa</button>
    </div>
    <div id="fullname-edit" class="flex items-center space-x-4 hidden mt-2">
      <input type="fullname" id="fullname-input" name="fullname" value="{{fullname}}" class="w-full bg-[#0a0a0a] text-[#f3f5f7] px-4 py-2 border border-[#333333] rounded-lg focus:outline-none" />
      <button onclick="saveField('fullname')" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Lưu</button>
      <button onclick="cancelEdit('fullname')" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Hủy</button>
    </div>
  </div>

    <div class="mb-6 p-3 w-full">
    <label for="quote" class="block mb-2">Mô tả hiện tại</label>
    <div id="quote-section" class="flex items-center space-x-4">
      <span id="quote-value" class="mr-auto">{{quote}}</span>
      <button onclick="editField('quote')" class="text-blue-500 hover:text-blue-700">Chỉnh sửa</button>
    </div>
    <div id="quote-edit" class="flex items-center space-x-4 hidden mt-2">
      <input type="quote" id="quote-input" name="quote" value="{{quote}}" class="w-full bg-[#0a0a0a] text-[#f3f5f7] px-4 py-2 border border-[#333333] rounded-lg focus:outline-none" />
      <button onclick="saveField('quote')" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Lưu</button>
      <button onclick="cancelEdit('quote')" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Hủy</button>
    </div>
  </div>

  <div class="mb-6 p-3 w-full">
    <label for="email" class="block mb-2">Email hiện tại</label>
    <div id="email-section" class="flex items-center space-x-4">
      <span id="email-value" class="mr-auto">{{email}}</span>
      <button onclick="editField('email')" class="text-blue-500 hover:text-blue-700">Chỉnh sửa</button>
    </div>
    <div id="email-edit" class="flex items-center space-x-4 hidden mt-2">
      <input type="email" id="email-input" name="email" value="{{email}}" class="w-full bg-[#0a0a0a] text-[#f3f5f7] px-4 py-2 border border-[#333333] rounded-lg focus:outline-none" />
      <button onclick="saveField('email')" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Lưu</button>
      <button onclick="cancelEdit('email')" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Hủy</button>
    </div>
  </div>

  <div class="mb-6 p-3 w-full">
